    <!-- To see how these attributes are used, please visit https://material.io/develop/android/theming/color/ -->
    <style name="Base.Theme.Sunflower" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/orange_700</item>
        <item name="colorOnPrimary">@color/orange_100</item>
        <item name="colorPrimaryDark">@color/orange_900</item>
        <item name="colorAccent">@color/orange_900</item>
        <item name="colorSecondary">@color/lime_700</item>
        <item name="android:colorBackground">@color/lime_100</item>
    </style>

    <style name="Theme.Sunflower" parent="Base.Theme.Sunflower" />

    <style name="Theme.Sunflower.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="TextAppearance.Sunflower.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- ExoPlayer -->
    <style name="TrackSelectionDialogThemeOverlay" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="windowNoTitle">false</item>
    </style>

    <style name="PlayerTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="PlayerTheme.Spherical">
        <item name="surface_type">spherical_view</item>
    </style>

</resources>
